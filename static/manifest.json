{
    "manifest_version": 3,
    "name": "Redmine Time Spender",
    "short_name": "RMTS",
    "description": "Reduce time spent in Redmine.",
    "homepage_url": "https://github.com/ZalaPanda/redmine-time-spender",
    "version": "1.1.1",
    "version_name": "1.1.1",
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_title": "Redmine Time Spender",
        "default_icon": "img/icon-50.png",
        "default_popup": "popup.html"
    },
    "options_ui": {
        "page": "options.html",
        "open_in_tab": false
    },
    "icons": {
        "16": "img/icon-16.png",
        "48": "img/icon-48.png",
        "128": "img/icon-128.png"
    },
    "commands": {
        "_execute_action": {
            "suggested_key": {
                "default": "Ctrl+Comma",
                "mac": "Command+Comma"
            }
        }
    },
    "permissions": [
        "storage",
        "cookies"
    ],
    "host_permissions": [
        "http://*/*",
        "https://*/*"
    ]
}